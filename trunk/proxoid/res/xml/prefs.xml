<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">  
	
	<CheckBoxPreference 
		android:key="onoff" 
		android:summaryOff="Proxy currently off. Select to switch on." 
		android:summaryOn="Proxy currently on. Select to switch off." 
		android:order="1" 
		android:title="Start/Stop Proxoid" 
		android:defaultValue="false"
	/>  
	<EditTextPreference
		android:title="Port" 
		android:key="port" 
		android:order="2" 
		android:defaultValue="8080" 
		android:numeric="integer" 
		android:maxLength="4" 
	/>
	<ListPreference 
		android:key="useragent" 
		android:order="3" 
		android:title="User-Agent filter"
		android:entries="@array/useragent_values"
		android:entryValues="@array/useragent_keys"
	/>
